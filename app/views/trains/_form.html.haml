= simple_form_for(@train) do |f|
  = f.error_notification

  .form-inputs
    %p
      = f.label "培训类别"
      = f.collection_select :category_id, TrainCategory.all, :id, :name
    .input-append.date#dp
      = f.label "开始时间"
      = f.text_field :start_date, class: "datepicker", id: "dp1"
    = f.input :end_date
    = f.input :duration
    = f.input :organizer

  .form-actions
    = f.button :submit
