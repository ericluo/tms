= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), 
                  :html => { :method => :put }) do |f|
  = devise_error_messages!
  
  .form-inputs
    = f.input :name, required: true
    = f.association :department, required: true
    = f.input :email, required: true
    = f.input :password, as: :password, autocomplete: "off", hint: "不修改密码时此项留空", required: true
    = f.input :password_confirmation, as: :password, hint: "不修改密码时此项留空", required: true
    = f.input :current_password, as: :password, hint: "请输入原密码确认变更", required: true
    = f.association :position, required: true
    
  .form-actions
    = f.button :submit, class: 'btn-primary'
%p
= link_to "注销", registration_path(resource_name), :data => {:confirm => "确定吗?"}, :method => :delete
= link_to "返回", :back
