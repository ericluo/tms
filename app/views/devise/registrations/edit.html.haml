%h2 个人信息设置
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), 
                  :html => { :method => :put }) do |f|
  = devise_error_messages!
  
  .form-inputs
    = f.input :name
    = f.association :department
    = f.input :email
    = f.input :password, as: :password, autocomplete: "off"
    = f.input :password_confirmation, as: :password
    = f.input :current_password, as: :password, hint: "请输入原密码确认变更"
    = f.association :position
    
  .form-actions
    = f.button :submit, class: 'btn-primary'
%p
= link_to "注销", registration_path(resource_name), :data => {:confirm => "确定吗?"}, :method => :delete
= link_to "返回", :back
