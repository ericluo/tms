%h2 用户注册
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    = f.label "姓名"
    = f.text_field :name
  %div 
    = f.label "部门"
    = f.collection_select :department, Department.all, :id, :name  
  %div
    = f.label "账号"
    = f.email_field :email
  %div  
    = f.label "密码"
    = f.password_field :password
  %div
    = f.label "重复密码"
    = f.password_field :password_confirmation
  %div
    = f.label "职务"
    = f.collection_select :rank, User::RANKS.to_pair_with_index, :second, :first
  %div
    = f.label "角色"
    = f.collection_select :role, User::ROLES.to_pair_with_index, :second, :first
  %div= f.submit "注册"
= render "devise/shared/links"
