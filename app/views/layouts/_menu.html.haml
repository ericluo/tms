- if user_signed_in?
  .row
    %ul.nav.nav-tabs.nav-stacked
      %li.nav-header.alert-info 学分管理
      %li
        = link_to trains_path(v: :trainee) do
          %i.icon-eye-open
          我的学分
      - if can? :update, Train
        %li
          = link_to new_train_path do
            %i.icon-edit
            学分登记
        %li
          = link_to trains_path(v: :registrar) do
            %i.icon-list-alt
            我的登记簿 
      - if can? :manage, Train      
        %li
          = link_to trains_path(v: :approve) do
            %i.icon-check
            学分审验

  -if can? :manage, Report    
    .row
      %ul.nav.nav-tabs.nav-stacked
        %li.nav-header.alert-info 统计分析
        %li= link_to '生成报表', new_report_path
        %li= link_to "学分排名"
        %li= link_to "学分明细"
        %li= link_to "总体情况"

  .row
    %ul.nav.nav-tabs.nav-stacked
      %li.nav-header.alert-info 系统管理    
      %li
        = link_to edit_user_path(current_user.id) do
          %i.icon-tint
          修改密码
      - if can? :manage, :all  
        %li
          = link_to users_path do
            %i.icon-user
            用户管理
        %li
          = link_to departments_path do
            %i.icon-wrench
            部门管理
        %li
          = link_to positions_path do
            %i.icon-asterisk
            职务管理

